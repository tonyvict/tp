@startuml
skin rose
skinparam ActivityFontSize 15
skinparam ArrowFontSize 12
start
:User enters command to unschedule a lesson;
:Logic parses student index and lesson index;
:Create and execute UnscheduleCommand;
if () then ([invalid person index])
  :Display invalid index error;
  stop
else ([valid person index])
  :Retrieve target person;
endif
if () then ([no lessons scheduled])
  :Display "no lessons" error;
  stop
else ([lessons scheduled])
  :Validate lesson index;
endif
if () then ([invalid lesson index])
  :Display invalid lesson index error;
  stop
else ([valid lesson index])
  :Remove lesson from schedule;
  :Update filtered list;
  :Display success to user;
  stop
endif
@enduml
