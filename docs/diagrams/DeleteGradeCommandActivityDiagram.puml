@startuml
skin rose
skinparam ActivityFontSize 15
skinparam ArrowFontSize 12
start
:User enters command to delete a grade;
:Logic parses index and subject-assessment;
:Create and execute DeleteGradeCommand;
if () then ([invaild inex])
  :Display invalid index error;
  stop
else ([valid index])
  :Retrieve target person;
endif
if () then ([grade does not exist])
  :Display grade not found error;
  stop
else ([grade exsists])
  :Remove grade from person's grade list;
  :Update person with modified grade list;
  :Display success to user;
  stop
endif
@enduml

